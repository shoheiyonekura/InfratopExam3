<h2>User info</h2>
      <table>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name%></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
      </table>
      <h2>New book</h2>
      <%= form_with model: book do |f|%>
        <div class="field">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
        </div>
        <div class="field">
        <%= f.label :body, "Opinion" %>
        <%= f.text_area :body %>
        </div>
        <%= f.submit 'Create Book'%>
      <% end %>