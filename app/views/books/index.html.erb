<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <tb>
                <%= link_to book.title, book_path(book.id) %>
              </tb>
              <tb>
                <%= book.body %>
              </tb>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
